<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home â€” Catppuccin Mocha</title>
  <style>
    /* Catppuccin Mocha Palette */
    :root {
      --base: #1e1e2e;
      --mantle: #181825;
      --crust: #11111b;

      --text: #cdd6f4;
      --subtext0: #a6adc8;
      --subtext1: #bac2de;

      --surface0: #313244;
      --surface1: #45475a;
      --surface2: #585b70;

      --blue: #89b4fa;
      --lavender: #b4befe;
      --sky: #89dceb;
      --mauve: #cba6f7;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: "Poppins", sans-serif;
    }

    body {
      background: linear-gradient(135deg, var(--mantle), var(--crust));
      color: var(--text);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      text-align: center;
      overflow: hidden;
    }

    h1 {
      font-size: 3.2rem;
      margin-bottom: 0.3rem;
      color: var(--mauve);
    }

    p {
      color: var(--subtext1);
      margin-bottom: 2rem;
      font-size: 1.1rem;
    }

    /* Clock */
    .clock {
      position: absolute;
      top: 6rem;
      text-align: center;
      animation: fadeIn 1s ease-in-out;
    }

    #time {
      font-size: 3rem;
      font-weight: 700;
      color: var(--blue);
      text-shadow: 0 0 12px rgba(137, 180, 250, 0.4);
      letter-spacing: 1px;
    }

    #date {
      font-size: 1.1rem;
      color: var(--subtext0);
      margin-top: 0.4rem;
    }

    /* Search Container */
    .search-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.7rem;
    }

    /* Default Search Box */
    .search-box {
      display: flex;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 40px;
      overflow: hidden;
      width: 70%;
      max-width: 600px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(8px);
    }

    .search-box input {
      flex: 1;
      border: none;
      outline: none;
      padding: 0.9rem 1.2rem;
      background: transparent;
      color: #fff;
      font-size: 1.1rem;
    }

    .search-box input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .search-box button {
      background: var(--mauve);
      border: none;
      color: var(--crust);
      padding: 0.9rem 1.7rem;
      cursor: pointer;
      transition: 0.3s;
      font-weight: bold;
      font-size: 1rem;
    }

    .search-box button:hover {
      background: var(--lavender);
      transform: scale(1.05);
    }

    /* Default Selector */
    select {
      padding: 0.4rem 0.8rem;
      font-size: 1rem;
      border-radius: 6px;
      border: 1px solid var(--surface2);
      background: var(--surface0);
      color: var(--text);
    }

    /* Links */
    .links {
      margin-top: 2rem;
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .links a {
      color: var(--sky);
      text-decoration: none;
      opacity: 0.85;
      transition: 0.2s;
      font-weight: 500;
    }

    .links a:hover {
      opacity: 1;
      text-shadow: 0 0 8px var(--sky);
    }

    /* Popup Styles */
    .popup-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 10;
    }

    .popup {
      background: var(--surface0);
      border-radius: 20px;
      padding: 2rem;
      width: 90%;
      max-width: 400px;
      box-shadow: 0 0 25px rgba(0, 0, 0, 0.4);
      text-align: center;
      animation: fadeIn 0.3s ease;
    }

    .popup h2 {
      margin-bottom: 1rem;
      color: var(--mauve);
    }

    .popup input {
      width: 100%;
      padding: 0.8rem;
      border-radius: 10px;
      border: none;
      margin-bottom: 1rem;
      font-size: 1rem;
      outline: none;
      color: var(--text);
      background: var(--surface1);
    }

    .popup-buttons {
      display: flex;
      justify-content: center;
      gap: 1rem;
    }

    .popup button {
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 10px;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
    }

    .popup .go-btn {
      background: var(--mauve);
      color: var(--crust);
    }

    .popup .go-btn:hover {
      background: var(--lavender);
    }

    .popup .close-btn {
      background: var(--surface2);
      color: var(--text);
    }

    .popup .close-btn:hover {
      background: var(--surface1);
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <div class="clock">
    <div id="time"></div>
    <div id="date"></div>
  </div>

  <h1>Welcome Back</h1>
  <p>What would you like to explore today?</p>

  <div class="search-container">
    <div class="search-box">
      <input type="text" id="query" placeholder="Search the web..." />
      <button onclick="search()">Go</button>
    </div>
    <select id="engine">
      <option value="brave" selected>Brave Search</option>
      <option value="duckduckgo">DuckDuckGo</option>
    </select>
  </div>

  <div class="links">
    <a id="youtube-link">YouTube</a>
    <a href="https://www.reddit.com" target="_blank">Reddit</a>
    <a id="chatgpt-link">ChatGPT</a>
    <a href="https://mail.google.com" target="_blank">Gmail</a>
  </div>

  <!-- Popup Window -->
  <div class="popup-overlay" id="popup">
    <div class="popup">
      <h2 id="popup-title"></h2>
      <input type="text" id="popup-input" placeholder="Type your query..." />
      <div class="popup-buttons">
        <button class="go-btn" id="popup-go">Go</button>
        <button class="close-btn" onclick="closePopup()">Close</button>
      </div>
    </div>
  </div>

  <script>
    // --- Search functionality ---
    const input = document.getElementById("query");
    const engineSelect = document.getElementById("engine");

    input.addEventListener("keypress", function (e) {
      if (e.key === "Enter") search();
    });

    function search() {
      const q = input.value.trim();
      const engine = engineSelect.value;
      if (!q) return;

      let url = "";
      if (engine === "duckduckgo") {
        url = `https://duckduckgo.com/?q=${encodeURIComponent(q)}`;
      } else if (engine === "brave") {
        url = `https://search.brave.com/search?q=${encodeURIComponent(q)}`;
      }

      window.location.href = url;
    }

    // --- Live Clock + Date ---
    function updateClock() {
      const now = new Date();
      const hours = now.getHours().toString().padStart(2, '0');
      const minutes = now.getMinutes().toString().padStart(2, '0');
      const seconds = now.getSeconds().toString().padStart(2, '0');
      document.getElementById("time").textContent = `${hours}:${minutes}:${seconds}`;

      const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      document.getElementById("date").textContent = now.toLocaleDateString(undefined, options);
    }

    updateClock();
    setInterval(updateClock, 1000);

    // --- Popup Logic ---
    const popup = document.getElementById("popup");
    const popupTitle = document.getElementById("popup-title");
    const popupInput = document.getElementById("popup-input");
    const popupGo = document.getElementById("popup-go");

    let currentApp = "";

    document.getElementById("chatgpt-link").addEventListener("click", () => openPopup("ChatGPT"));
    document.getElementById("youtube-link").addEventListener("click", () => openPopup("YouTube"));

    function openPopup(app) {
      currentApp = app;
      popupTitle.textContent = `Ask ${app}`;
      popup.style.display = "flex";
      popupInput.value = "";
      popupInput.focus();
    }

    function closePopup() {
      popup.style.display = "none";
    }

    // Trigger Go on button click
    popupGo.addEventListener("click", goPopup);

    // Trigger Go when pressing Enter inside popup
    popupInput.addEventListener("keypress", function(e) {
      if (e.key === "Enter") goPopup();
    });

    function goPopup() {
      const query = popupInput.value.trim();
      if (!query) return;
      let url = "";

      if (currentApp === "ChatGPT") {
        // Open ChatGPT with pre-filled prompt (for quick start)
        url = `https://chat.openai.com/chat?model=gpt-4&prompt=${encodeURIComponent(query)}`;
      } else if (currentApp === "YouTube") {
        url = `https://www.youtube.com/results?search_query=${encodeURIComponent(query)}`;
      }

      window.open(url, "_blank");
      closePopup();
    }

    // Close popup with ESC
    document.addEventListener("keydown", function(e) {
      if (e.key === "Escape") closePopup();
    });
  </script>
</body>
</html>

